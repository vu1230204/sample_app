<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("view.shared.header.home"), root_path %></li>
        <li><%= link_to t("view.shared.header.help"), help_path %></li>
        <!-- logged_in =true -->
        <% if logged_in? %>
        <li><%= link_to t("view.shared.header.users"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("view.shared.header.profile"), current_user %></li>
            <li><%= link_to t("view.shared.header.settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("view.shared.header.log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <!-- logged_in =false -->
        <% else %>
        <li><%= link_to t("view.shared.header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>